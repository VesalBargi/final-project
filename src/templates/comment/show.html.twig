{% extends 'base.html.twig' %}

{% block title %}{{ 'labels.show_comment'|trans }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ 'labels.show_comment'|trans }}</h1>

    <div class="container d-inline-flex mb-4">
        {% if is_granted('ROLE_EDITOR') or is_granted('EDIT', comment) %}
            <a href="{{ path('app_comment_edit', {'id': comment.id}) }}"
               class="btn btn-outline-success me-2">{{ 'actions.edit'|trans }}</a>
        {% endif %}

        {% if is_granted('ROLE_EDITOR') or is_granted('DELETE', comment) %}
            {{ include('comment/_delete_form.html.twig') }}
        {% endif %}
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">
                {{ comment.subject }}
            </h5>
            <p class="card-text">{{ comment.body }}</p>
        </div>
    </div>
{% endblock %}
