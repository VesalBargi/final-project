{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ comment.subject }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ comment.body }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">{{ 'actions.back'|trans }}</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{ 'actions.edit'|trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
