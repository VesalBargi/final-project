{% extends 'base.html.twig' %}

{% block title %}{{ 'labels.login'|trans }}{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>{{ 'labels.login'|trans }}</h1>

    <form action="{{ path('app_login') }}" method="post">
        <label for="username" class="mb-2">Email</label>
        <input type="text" class="form-control mb-3" id="username" name="_username" value="{{ last_username }}">

        <label for="password" class="mb-2">Password</label>
        <input type="password" class="form-control mb-4" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit" class="btn btn-outline-light">{{ 'actions.login'|trans }}</button>
    </form>
{% endblock %}
